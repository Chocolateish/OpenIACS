{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "skipLibCheck": true,
    "paths": {
      "@package": ["./package.json"],
      /*Common */
      "@libResult": ["./src/lib/common/result/index.ts"],
      "@libState": ["./src/lib/common/state/index.ts"],
      "@libEvent": ["./src/lib/common/event/index.ts"],
      "@libString": ["./src/lib/common/string/string.ts"],
      "@libMath": ["./src/lib/common/math/index.ts"],
      "@libColors": ["./src/lib/common/colors/index.ts"],
      /*UI */
      "@uicommon": ["./src/lib/ui/common/index.ts"],
      "@base": ["./src/lib/ui/base/index.ts"],
      "@theme": ["./src/lib/ui/theme/index.ts"],
      "@icons": ["./src/lib/ui/icons/index.ts"],
      "@svg": ["./src/lib/ui/svg/index.ts"],
      "@spinners": ["./src/lib/ui/spinners/index.ts"],
      "@contextmenu": ["./src/lib/ui/contextmenu/index.ts"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
